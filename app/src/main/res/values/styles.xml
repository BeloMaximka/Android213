<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="calc_btn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">20sp</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="calc_btn_func" parent="calc_btn">
        <item name="android:background">@drawable/calc_btn_func</item>
    </style>

    <style name="calc_btn_digit" parent="calc_btn">
        <item name="android:background">@drawable/calc_btn_digit</item>
    </style>

    <style name="calc_btn_equal" parent="calc_btn">
        <item name="android:background">@drawable/calc_btn_equal</item>
    </style>

    <style name="calc_row_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- region Game -->
    <style name="game_shape">
        <item name="backgroundTint">@null</item>
        <item name="fontFamily">@font/clear_sans</item>
    </style>

    <style name="game_btn" parent="game_shape">
        <item name="android:background">@drawable/game_btn</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textSize">23sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="game_cell" parent="game_shape">
        <item name="android:background">@drawable/game_all_shape</item>
        <item name="android:backgroundTint">@color/game_tv_cell</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="game_cell_2" parent="game_cell">
        <item name="android:backgroundTint">@color/game_tv_2</item>
        <item name="android:textColor">@color/game_tv_text_dark</item>
        <item name="android:text">2</item>
    </style>

    <style name="game_cell_4" parent="game_cell">
        <item name="android:backgroundTint">@color/game_tv_4</item>
        <item name="android:textColor">@color/game_tv_text_dark</item>
        <item name="android:text">4</item>
    </style>

    <style name="game_cell_8" parent="game_cell">
        <item name="android:backgroundTint">@color/game_tv_8</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:text">8</item>
    </style>

    <style name="game_cell_16" parent="game_cell">
        <item name="android:backgroundTint">@color/game_tv_16</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:text">16</item>
    </style>

    <style name="game_cell_32" parent="game_cell">
        <item name="android:backgroundTint">@color/game_tv_32</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:text">32</item>
    </style>

    <style name="game_cell_64" parent="game_cell">
        <item name="android:backgroundTint">@color/game_tv_64</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:text">64</item>
    </style>
    <!-- endregion -->
</resources>